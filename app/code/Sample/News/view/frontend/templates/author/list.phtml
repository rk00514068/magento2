<?php /** @var Sample\News\Block\Author\ListAuthor $block */ ?>
<?php $_authors = $block->getAuthors(); ?>
<div class="authors">
    <?php if ($_authors->getSize() > 0) :?>
        <div class="sample-news-authors-toolbar toolbar top"><?php echo $block->getPagerHtml(); ?></div>
        <div class="sample-news-authors-list-container">
            <?php foreach ($_authors as $_author) : ?>
                <?php /** @var Sample\News\Model\Author $_author */ ?>
                <div class="sample-news-author-list-item">
                    <a href="<?php /* @escapeNotVerified */ echo $_author->getAuthorUrl();?>">
                        <?php echo /* @escapeNotVerified */ $_author->getName();?>
                    </a>
                </div>
            <?php endforeach;?>
        </div>
        <div class="sample-news-authors-toolbar toolbar bottom"><?php echo $block->getPagerHtml(); ?></div>
    <?php else : ?>
        <?php /* @escapeNotVerified */ echo __('There are no authors at this moment');?>
    <?php endif;?>
</div>
