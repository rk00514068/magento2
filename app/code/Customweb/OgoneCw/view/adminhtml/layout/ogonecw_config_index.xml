<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
	<body>
		<referenceContainer name="page.main.actions">
			<block class="Magento\Backend\Block\Store\Switcher" name="ogonecw.config.switcher" template="Magento_Backend::store/switcher.phtml">
				<arguments>
					<argument name="switch_websites" xsi:type="string">1</argument>
					<argument name="switch_store_groups" xsi:type="string">0</argument>
					<argument name="switch_store_views" xsi:type="string">1</argument>
					<argument name="default_selection_name" xsi:type="string" translate="true">Default Config</argument>
					<argument name="show_manage_stores_link" xsi:type="string">0</argument>
				</arguments>
			</block>
		</referenceContainer>
		<referenceContainer name="left">
			<block class="Customweb\OgoneCw\Block\Adminhtml\Config\Tabs" name="ogonecw.config.tabs" before="-" />
		</referenceContainer>
		<referenceContainer name="content">
			<block class="Customweb\OgoneCw\Block\Adminhtml\Config\Edit" name="ogonecw.config.edit" />
		</referenceContainer>
	</body>
</page>